<%include partials/header%>
<div class="ui main text container segment">
  <div class="ui huge header">Compose</div>
  <!-- use method override to re-route as a put request using the query string ?_method=put -->
  <form class="ui form" action="/blogs/<%= blog.id %>?_method=PUT" method="POST">
    <div class="field">
      <label>Post Title</label>
      <!-- place the input into a blog object so the app can pass the blog object directly to the database, rather than passing every element of the blog individually -->
      <input type="text" name="blog[title]" value="<%= blog.title %>">
    </div>
    <div class="field">
      <label>your blog post</label>
      <textarea name="blog[content]"><%- blog.content %></textarea>
    </div>
    <div class="field">
      <label>Image URL</label>
      <input type="text" name="blog[imageUrl]" value=<%= blog.imageUrl %>>
    </div>
    <button class="ui big basic button" type="submit">update</button>
  </form>
</div>
<%include partials/footer%>