<%include partials/header%>
<div class="ui main text container segment">
  <div class="ui huge header">Compose</div>
  <form class="ui form" action="/blogs" method="POST">
    <div class="field">
      <label>Post Title</label>
      <!-- place the input into a blog object so the app can pass the blog object directly to the database, rather than passing every element of the blog individually -->
      <input type="text" name="blog[title]" placeholder="blog title">
    </div>
    <div class="field">
      <label>your blog post</label>
      <textarea name="blog[content]" placeholder="your post"></textarea>
    </div>
    <div class="field">
      <label>Image URL</label>
      <input type="text" name="blog[imageUrl]" placeholder="https://www.google.com/images/branding/googlelogo/2x/googlelogo_color_272x92dp.png">
    </div>
    <button class="ui big basic button" type="submit">post</button>
  </form>
</div>
<%include partials/footer%>