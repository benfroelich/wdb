<% include partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui">
        <p><%= blog.publishDate.toLocaleDateString() %> </p>
        <image class="ui centered rounded image" src="<%= blog.imageUrl %>">
        <p><%- blog.content %> </p>
        <a href=<%= "/blogs/" + blog._id + "/edit" %>>edit</a>   
        <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
            <button id="delete" class="ui red basic button">Delete</button>
        </form> 
    </div>
</div>
<script>
    $("#delete").onclick(function() {
        alert("deleting!!!");
    });
</script>
